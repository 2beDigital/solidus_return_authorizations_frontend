<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @return_authorization } %>
<%= form_for [@order, @return_authorization] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t(:create), 'ok btn btn-primary' %>
      <%= link_to Spree.t('actions.cancel'), order_url(@order), :icon => 'remove', :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>