<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @return_authorization } %>
<h1><%= Spree.t(:return_authorization) %></h1>
<fieldset class="no-border-top">
	<% if @form_return_items.present? %>
		<%= form_for [@order, @return_authorization] do |f| %>  
		    <%= render :partial => 'form', :locals => { :f => f } %>
		    <div class="form-buttons filter-actions actions" data-hook="buttons">
		      <%= submit_tag Spree.t(:create), class: 'btn btn-primary' %>
		      <%= link_to Spree.t('actions.cancel'), order_url(@order), :icon => 'remove', :class => 'btn btn-success' %>
		    </div>
		<% end %>
	<% else %>
		<h3><%= Spree.t(:no_more_items_to_return) %></h3>
	<% end %>
</fieldset>